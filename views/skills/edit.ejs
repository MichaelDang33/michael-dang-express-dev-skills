<%- include("../partials/header") %>

    <h1>Edit <%= skills.skill %></h1>
    
    
    <form action="/skills/<%= skills.id %>?_method=PUT" method="POST" autocomplete="off">
        <input type="text" name="skill" value="<%= skills.skill %>">
        <br>
        <br>
        <input type="checkbox" name="done" <%= skills.done ? "checked" : "" %>>
        <label for="done" >Understanding?</label>
        <br>
        <br>
        <input type="submit" value="Update Skill">
    </form>

<%- include("../partials/footer") %>